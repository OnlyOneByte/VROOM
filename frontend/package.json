{
	"name": "vroom-frontend",
	"private": true,
	"version": "1.0.0",
	"description": "VROOM Car Tracker Frontend PWA",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest --run",
		"test:watch": "vitest",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:chromium": "playwright test --project=chromium",
		"test:e2e:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
		"lint": "eslint . --ext .js,.ts,.svelte",
		"lint:fix": "eslint . --ext .js,.ts,.svelte --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"type-check": "svelte-check --tsconfig ./tsconfig.json --threshold error",
		"validate": "npm run lint && npm run format:check && npm run type-check && npm run test"
	},
	"devDependencies": {
		"@axe-core/playwright": "^4.10.2",
		"@lucide/svelte": "^0.546.0",
		"@playwright/test": "^1.56.0",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.43.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@tailwindcss/typography": "^0.5.19",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.2.0-next.3",
		"@types/d3": "^7.4.3",
		"@types/jsdom": "^27.0.0",
		"@typescript-eslint/eslint-plugin": "^8.18.2",
		"@typescript-eslint/parser": "^8.18.2",
		"@vitest/ui": "^3.2.4",
		"autoprefixer": "^10.4.21",
		"clsx": "^2.1.1",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.0",
		"globals": "^16.4.0",
		"happy-dom": "^20.0.1",
		"jsdom": "^27.0.0",
		"postcss": "^8.5.6",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"svelte": "^5.39.5",
		"svelte-check": "^4.3.2",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^3.1.1",
		"tailwindcss": "^4.1.14",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.2",
		"vite": "^7.1.7",
		"vite-plugin-pwa": "^1.0.3",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/postcss": "^4.1.14",
		"d3": "^7.9.0",
		"lucide-svelte": "^0.545.0",
		"superforms": "^0.0.1",
		"sveltekit-superforms": "^2.27.2",
		"zod": "^4.1.12"
	}
}
